<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ru.itmo.cs.dandadan.model.entity.HumanBeing</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="${env.DB_DRIVER}"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/human-beings"/>
            <property name="jakarta.persistence.jdbc.user" value="${env.DB_USERNAME}"/>
            <property name="jakarta.persistence.jdbc.password" value="${env.DB_PASSWORD}"/>
            <property name="hibernate.dialect" value="${env.DB_DIALECT}"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>
